@page
@model UdemyNewMicroservice.Web.Pages.Auth.SignOutModel

@{
    ViewData["Title"] = "Sign Out";
}

<div class="text-center">
    <h1 class="display-4">Signing Out...</h1>
    <p>Please wait while we sign you out of your account.</p>
</div>

@section Scripts {
    <script>
        // Redirect to home page after sign out
        setTimeout(function() {
            window.location.href = '/';
        }, 1000);
    </script>
}
</invoke>